%p#notice= notice
%p
  %b Submitter:
  = @nugget.submitter
%p
  %b Submitted via:
  = @nugget.submission_method
%p
  %b Submitted on:
  = @nugget.submitted_at
%p
  %b Longitude/Latitude:
  #{@nugget.latitude},#{@nugget.longitude}
  %br/
  = button_to "map me!", "https://maps.google.com/maps?q=#{@nugget.latitude},#{@nugget.longitude}"
%p
  %b Address:
  = @nugget.signage_address
%p
  %b State / County:
  #{@nugget.signage_state} / #{@nugget.signage_county}
%p
  %b City / Neighborhood:
  #{@nugget.signage_city} / #{@nugget.signage_neighborhood}

%p
  = image_tag(@nugget.signage_url)

= link_to 'Edit', edit_nugget_path(@nugget)
\|
= link_to 'Back', nuggets_path

%p Also saved the following size versions of the image:

%p
  medium (height 300)
  = image_tag(@nugget.signage_url(:medium))
%p
  small (height 150)
  = image_tag(@nugget.signage_url(:small))
%p
  thumb (height 75)
  = image_tag(@nugget.signage_url(:thumb))
%p
  tiny (height 50)
  = image_tag(@nugget.signage_url(:tiny))
