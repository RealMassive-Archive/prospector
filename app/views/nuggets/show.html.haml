%p#notice= notice
%p
  %b Submitter:
  = @nugget.submitter
%p
  %b Submitted via:
  = @nugget.submission_method
%p
  %b Submitted on:
  = @nugget.submitted_at
%p
  %b Longitude/Latitude:
  #{@nugget.latitude},#{@nugget.longitude}
  %br/
  = button_to "map me!", "https://maps.google.com/maps?q=#{@nugget.latitude},#{@nugget.longitude}"
%p
  %b Address:
  = @nugget.signage_address
%p
  %b State / County:
  #{@nugget.signage_state} / #{@nugget.signage_county}
%p
  %b City / Neighborhood:
  #{@nugget.signage_city} / #{@nugget.signage_neighborhood}

= link_to 'Edit', edit_nugget_path(@nugget)
\|
= link_to 'Back', nuggets_path

-@nugget.nugget_signages.each do |s|
  %p
    = image_tag( s.signage_url :medium )



%p Also saved the following size versions of the image (above is 'small' version):

%p
  medium (height 300)
%p
  small (height 150)
%p
  thumb (height 75)
%p
  tiny (height 50)
